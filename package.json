{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "A react boilerplate with redux",
  "main": "./dist/server.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:server watch:build",
    "start-prod": "npm install && npm run build",
    "build": "webpack --mode production",
    "test": "jest ./src",
    "clean": "rimraf dist && rimraf node_modules",
    "watch:build": "webpack --mode development --watch",
    "watch:server": "nodemon \"./dist/server.js\" --watch \"./dist\"",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/batuyildiz/react-boilerplate.git"
  },
  "keywords": [
    "Node",
    "React"
  ],
  "author": "Batu Yıldız",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/batuyildiz/react-boilerplate/issues"
  },
  "homepage": "https://github.com/batuyildiz/react-boilerplate#readme",
  "dependencies": {
    "@date-io/date-fns": "0.0.2",
    "@material-ui/core": "^3.5.1",
    "@material-ui/lab": "^3.0.0-alpha.23",
    "connected-react-router": "^5.0.0",
    "date-fns": "^2.0.0-alpha.16",
    "express": "^4.16.4",
    "history": "^4.7.2",
    "isomorphic-fetch": "^2.2.1",
    "material-ui-pickers": "^2.0.2",
    "mixpanel-browser": "^2.24.0",
    "npm": "^6.4.1",
    "prop-types": "^15.6.2",
    "raf": "^3.4.1",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-infinite-scroller": "^1.2.2",
    "react-redux": "^5.1.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scroll-up-button": "^1.6.4",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^1.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.5",
    "npm-run-all": "^4.1.3",
    "react-test-renderer": "^16.6.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/enzyme.setup.js",
    "setupFiles": [
      "raf/polyfill"
    ]
  }
}
